<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.fuse"
		name="Sinclair - ZX Spectrum (Fuse)"
		version="1.6.0.22"
		provider-name="Team Fuse">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.atari.2600" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>spectrum</platforms>
		<extensions>tzx|tap|z80|rzx|scl|trd|dsk</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>GPLv3</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.fuse</source>
		<summary lang="en_GB">Sinclair - ZX Spectrum (Fuse) 1.6.0</summary>
		<description lang="da_DK">Fuse (den gratis Unix Spectrum-emulator) var oprindeligt en ZX Spectrum-emulator til Unix. Det er siden blevet overf√∏rt til Mac OS X, Windows, Wii, AmigaOS og MorphOS.</description>
		<description lang="en_GB">Fuse (the Free Unix Spectrum Emulator) was originally a ZX Spectrum emulator for Unix. It has since been ported to Mac OS X, Windows, the Wii, AmigaOS and MorphOS.</description>
	</extension>
</addon>
